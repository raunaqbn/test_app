<h1 align="center">All Patients</h1>
  <div align="center">
    <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="testimonial-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.testimonials.count, "testimonial") if user.testimonials %></small></li>
        </div>
      </div>
    </ul>
    <% end %>
  </div>