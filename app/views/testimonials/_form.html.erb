
<%= render 'shared/errors', obj: @testimonial %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@testimonial, :html => {class: "form-horizontal",role: "form"}) do |f| %>
    <div class="form-group">
      <div class="col-sm-1 control-label">
          <%= f.label :title %>
      </div>
      <div class="col-sm-5">
          <%=f.text_field :title, class: "form-control", placeholder: "Title of testimonial", autofocus: true %>
      </div>

    </div>


    <div class="form-group">
      <div class="col-sm-1 control-label">
          <%= f.label :description %>
      </div>
      <div class="col-sm-10">
          <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Enter the testimonial here", autofocus: true  %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-5 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-large' %>
      </div>
    </div>
    <% end %>
    <div align="center" class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "Cancel request", testimonials_path %> ]
    </div>
    
  </div>
</div>